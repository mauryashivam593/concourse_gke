if(pipeline_task != "TEST") {
    okta_fnol_url <-"https://cnapreview.okta.com/oauth2/aus1ac00mhbxpEFNs297/v1/introspect?token=" 
    okta_fnol_user <- ""
    okta_fnol_pw <- ""      
    
    accessToken <- input_data$AccessToken
 
    url=paste0(okta_fnol_url,accessToken,sep="")
    
    okta_resp <- httr::POST(url,
                            body = '',
                            config = c(
                              # Set basic auth
                              httr::authenticate(okta_fnol_user, okta_fnol_pw, "basic"),
                              httr::add_headers("Content-Type" = "application/x-www-form-urlencoded",
                                                "Accept" = "application/json")))
    if(is.logical(content(okta_resp)[[1]])) {
      if(content(okta_resp)[[1]]) {
        if (verbose == "Yes"){print("Okta validation successful!")}        
      } else {
        return(jsonlite::toJSON(data.frame(ErrorCode="401",ErrorMessage="Unauthorized Access - Error encountered during Okta validation...",stringsAsFactors=FALSE)))
      }
    } else {
      return(jsonlite::toJSON(data.frame(ErrorCode="401",ErrorMessage="Unauthorized Access - Error encountered during Okta validation...",stringsAsFactors=FALSE)))
    }
    
 }

